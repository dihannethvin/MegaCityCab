<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <!-- Servlet Configuration -->
    <servlet>
        <servlet-name>AdminLoginServlet</servlet-name>
        <servlet-class>servlets.AdminLoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CustomerLoginServlet</servlet-name>
        <servlet-class>servlets.CustomerLoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminSignupServlet</servlet-name>
        <servlet-class>servlets.AdminSignupServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CustomerSignupServlet</servlet-name>
        <servlet-class>servlets.CustomerSignupServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ManageAdminsServlet</servlet-name>
        <servlet-class>servlets.admin.ManageAdminsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddDriverServlet</servlet-name>
        <servlet-class>servlets.AddDriverServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateDriverServlet</servlet-name>
        <servlet-class>servlets.UpdateDriverServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteDriverServlet</servlet-name>
        <servlet-class>servlets.DeleteDriverServlet</servlet-class>
    </servlet>
